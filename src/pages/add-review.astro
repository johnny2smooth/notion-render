---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Add Review">
  <main>
    <h1 class="text-2xl">Add Review</h1>
    <form action="/api/review" method="POST" class="stack">
      <label class="w-24">
        <span>Rating</span>
        <input type="number" name="rating" min="1" max="5" />
      </label>
      <label>
        <span>Review</span>
        <textarea name="review"></textarea>
      </label>
      <button type="submit">Submit</button>
    </form>
  </main>
</Layout>
<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
</style>
